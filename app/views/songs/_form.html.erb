
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label "Released" %><br>
    <%= f.check_box :released %>
  </div>
  <div>
    <%= f.label "Release Year" %><br>
    <%= f.number_field :release_year %>
  </div>
  <div>
    <%= f.label "Genre" %><br>
    <%= f.text_field :genre %>
  </div>
  <div>
    <%= f.label "Artist Name" %><br>
    <%= f.text_field :artist_name %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
